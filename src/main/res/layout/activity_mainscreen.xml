<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_main_screen4"
    android:padding="15dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textColor="#fff8dc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/player1name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/fab_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:textColor="#fff8dc"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/player2name"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder (MATCHES  :  )"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="#fff8dc"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/matchestextview"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/matches"/>



        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/choicegroup"
            android:checkedButton="@+id/vshuman">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS HUMAN"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:textColor="#fff8dc"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fab_margin"
                android:id="@+id/vshuman"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS COMPUTER"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:textColor="#fff8dc"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vscomputer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS ONLINE"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:textColor="#fff8dc"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vsonline"/>

        </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="PLAY"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="#fff8dc"
        android:background="@drawable/player_main_screen6"
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/playbutton"/>

    </LinearLayout>